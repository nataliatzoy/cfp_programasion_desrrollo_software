---
interface Props{
    url: string;
    name: string;
    isBig?: boolean;
}
const {name, url, isBig= false} = Astro.props;
const id = url.split('/').at(-2);
const imageScr = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`
---

<!-- href=`/pokemons/${name}` -->
<!-- href=`/pokemons/${name}` -->
<a
    href=`/pokemons/${name}`
    class:list={[
        ` rounded  text-center flex flex-col justify-center items-center p-2 `,
    {
    border:  !isBig ,
    }
    ]},
    

>
    <img src={imageScr} alt={name} transition:name=`${name}-image` class:list={[
        {
            'w-26 h-26 ': isBig,
            'w-22 h-22 ': !isBig
        }
    ]}/>
    <span class:list={[
        "capitalize",
        {
            "text-4xl text-blue-500": isBig,
        }
    ]}>#{id} {name}</span>
</a>